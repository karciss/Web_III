<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor de Tareas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ejer2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }
    </style>
</head>
<body>
    <header class="pastel-header">
        <div class="container d-flex align-items-center justify-content-center position-relative">
            <div class="header-content text-center">
                <h1>@ViewData["Title"]</h1>
                <div class="header-subtitle d-none d-md-block text-white-50 mt-1">
                    <i class="fas fa-tasks me-2"></i>Organiza tu día de forma efectiva
                </div>
            </div>
            
            <button class="navbar-toggler" type="button" id="sidebarToggle" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </header>
    
    <div class="main-container">
        <nav class="vertical-navbar" id="sidebar">
            <div class="container px-3">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-clipboard-list nav-icon" style="color: #FFCCE5;"></i>Tareas
                </a>
                
                <div class="sidebar-divider my-3"></div>
                
                <div class="navbar-nav">
                    <ul class="navbar-nav flex-column w-100">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString() == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">
                                <i class="fas fa-home nav-icon" style="color: #FFCCE5;"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        
                        <div class="sidebar-heading mt-3 mb-2 ms-4 text-uppercase text-white-50" style="font-size: 0.75rem; opacity: 0.8; letter-spacing: 1px;">
                            Gestión de Tareas
                        </div>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-list-check nav-icon" style="color: #A5DEF1;"></i>
                                <span>Todas las Tareas</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-spinner nav-icon" style="color: #FBE7C6;"></i>
                                <span>En Progreso</span>
                                <span class="badge bg-info rounded-pill ms-auto">2</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-check-circle nav-icon" style="color: #C1E1C1;"></i>
                                <span>Completadas</span>
                                <span class="badge bg-success rounded-pill ms-auto">1</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-ban nav-icon" style="color: #F1A5A5;"></i>
                                <span>Canceladas</span>
                                <span class="badge bg-danger rounded-pill ms-auto">1</span>
                            </a>
                        </li>
                        
                        <div class="sidebar-divider my-3"></div>
                        
                        <div class="sidebar-heading mb-2 ms-4 text-uppercase text-white-50" style="font-size: 0.75rem; opacity: 0.8; letter-spacing: 1px;">
                            Ajustes
                        </div>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-user-circle nav-icon" style="color: #FFCCE5;"></i>
                                <span>Perfil</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">
                                <i class="fas fa-cog nav-icon" style="color: #C1E1C1;"></i>
                                <span>Configuración</span>
                            </a>
                        </li>
                    </ul>
                </div>
                
                <div class="sidebar-bottom mt-auto p-3 d-flex align-items-center" style="position: absolute; bottom: 0; left: 0; right: 0; border-top: 1px solid rgba(255, 255, 255, 0.1); margin-top: 2rem;">
                    <img src="https://via.placeholder.com/40" class="rounded-circle" alt="User">
                    <div class="ms-2 text-white">
                        <div style="font-weight: 600;">Usuario</div>
                        <div style="font-size: 0.8rem; opacity: 0.7;">usuario@ejemplo.com</div>
                    </div>
                </div>
            </div>
        </nav>

        <div class="content-with-sidebar">
            <div class="container py-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
            
            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2025 - Gestor de Tareas - <a asp-area="" asp-page="/Privacy">Privacidad</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const body = document.body;
            
            if (window.innerWidth <= 768) {
                body.classList.add('sidebar-collapsed');
            }
            
            sidebarToggle.addEventListener('click', function() {
                if (body.classList.contains('sidebar-collapsed')) {
                    body.classList.remove('sidebar-collapsed');
                    body.classList.add('sidebar-expanded');
                } else {
                    body.classList.add('sidebar-collapsed');
                    body.classList.remove('sidebar-expanded');
                }
            });
            
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach((item, index) => {
                item.style.animation = `fadeInRight 0.3s ease forwards ${0.1 + index * 0.05}s`;
                item.style.opacity = "0";
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>