@page
@model WebRazon.Pages.TareasEnProgresoModel
@{
    ViewData["Title"] = "Tareas En Progreso";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-2" style="color: var(--green-600);"><i class="bi bi-arrow-repeat me-2" style="color: var(--green-500);"></i>Tareas En Progreso</h1>
        <div>
            <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#nuevaTareaModal">
                <i class="bi bi-plus-circle"></i> Nueva Tarea
            </button>
        </div>
    </div>

    <!-- Lista de Tareas En Progreso -->
    <div class="card mb-4" style="border-color: var(--green-300);">
        <div class="card-header bg-warning">
            <div class="d-flex justify-content-between align-items-center">
                <div><i class="bi bi-arrow-repeat me-2"></i>Lista de Tareas En Progreso</div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Fecha de Vencimiento</th>
                            <th>Progreso</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model.InProgressTasks)
                        {
                            <tr>
                                <td>@task.Title</td>
                                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;" 
                                             aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-success" title="Completar">
                                            <i class="bi bi-check-lg"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-info-circle"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Nueva Tarea -->
<div class="modal fade" id="nuevaTareaModal" tabindex="-1" aria-labelledby="nuevaTareaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="nuevaTareaModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Agregar Tarea En Progreso
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NewTask.Title" class="form-label">Título de la Tarea</label>
                                <input asp-for="NewTask.Title" class="form-control" required />
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="NewTask.Description" class="form-label">Descripción</label>
                                <textarea asp-for="NewTask.Description" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NewTask.DueDate" class="form-label">Fecha de Vencimiento</label>
                                <input asp-for="NewTask.DueDate" type="date" class="form-control" required />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Progreso Inicial (%)</label>
                                <input type="range" class="form-range" min="0" max="100" step="5" value="25" id="progressRange" style="accent-color: var(--green-400);">
                                <div class="d-flex justify-content-between">
                                    <span>0%</span>
                                    <span id="progressValue" style="color: var(--green-600);">25%</span>
                                    <span>100%</span>
                                </div>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Archivo Adjunto (opcional)</label>
                                <input type="file" class="form-control" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </button>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-lg me-1"></i> Agregar Tarea
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Actualizar el valor del progreso cuando se mueve el control deslizante
            const progressRange = document.getElementById('progressRange');
            const progressValue = document.getElementById('progressValue');
            
            if (progressRange && progressValue) {
                progressRange.addEventListener('input', function() {
                    progressValue.textContent = this.value + '%';
                });
            }
        });
    </script>
}