@page
@model IndexModel
@{
    ViewData["Title"] = "Gestor de Tareas";
}

<div class="container">
    <h1 class="mb-4">Gestor de Tareas</h1>

    <!-- Task List Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-task me-2"></i>Mis Tareas</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Fecha de Vencimiento</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model.Tasks)
                        {
                            <tr>
                                <td>@task.Title</td>
                                <td>@task.Description</td>
                                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <span class="badge @(task.Status == "Urgente" ? "bg-danger" : 
                                                       task.Status == "En Progreso" ? "bg-warning" : 
                                                       task.Status == "Completada" ? "bg-success" : "bg-info")">
                                        @(task.Status == "Urgent" ? "Urgente" : 
                                          task.Status == "In Progress" ? "En Progreso" : 
                                          task.Status == "Completed" ? "Completada" : 
                                          task.Status == "Pending" ? "Pendiente" : task.Status)
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </button>
                                        <button class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check-lg"></i> Completar
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Add New Task Section -->
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Agregar Nueva Tarea</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NewTask.Title" class="form-label">Título de la Tarea</label>
                            <input asp-for="NewTask.Title" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NewTask.Description" class="form-label">Descripción</label>
                            <textarea asp-for="NewTask.Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NewTask.DueDate" class="form-label">Fecha de Vencimiento</label>
                            <input asp-for="NewTask.DueDate" type="date" class="form-control" required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="NewTask.Status" class="form-label">Estado</label>
                            <select asp-for="NewTask.Status" class="form-select">
                                <option value="Pendiente">Pendiente</option>
                                <option value="En Progreso">En Progreso</option>
                                <option value="Urgente">Urgente</option>
                                <option value="Completada">Completada</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Archivo Adjunto (opcional)</label>
                            <input type="file" class="form-control" />
                            <div class="form-text">Sube cualquier archivo relevante para esta tarea</div>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-plus-lg me-1"></i> Agregar Tarea
                        </button>
                        <button type="reset" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i> Limpiar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Esta sección contendría JavaScript del lado del cliente 
        // Por ahora, está vacía ya que esto es solo una implementación de UI
    </script>
}
