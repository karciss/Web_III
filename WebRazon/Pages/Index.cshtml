    <script>
        // Código JavaScript para manejar filtros y otras interacciones
        document.addEventListener('DOMContentLoaded', function() {
            // Aquí se puede añadir la lógica para filtrar las tareas
            // cuando se haga clic en los enlaces del menú lateral
        });
    </script>
