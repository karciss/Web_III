<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestor de Tareas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebRazon2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="mySidebar">
        <div class="sidebar-header">
            <h3>Menú</h3>
        </div>
        <div class="sidebar-items">
            <a asp-area="" asp-page="/Index"><i class="fas fa-home"></i> <span>Inicio</span></a>
            <a asp-area="" asp-page="/EnProceso"><i class="fas fa-spinner"></i> <span>En Proceso</span></a>
            <a asp-area="" asp-page="/Completadas"><i class="fas fa-check-circle"></i> <span>Completadas</span></a>
            <a asp-area="" asp-page="/Pendientes"><i class="fas fa-clock"></i> <span>Pendientes</span></a>
            <a asp-area="" asp-page="/Privacy"><i class="fas fa-shield-alt"></i> <span>Privacidad</span></a>
        </div>
    </div>
    
    <div id="main-content">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-pastel-green border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Gestor de Tareas</a>
                    <div class="navbar-hamburger" onclick="toggleNav()">
                        <div class="hamburger-line"></div>
                        <div class="hamburger-line"></div>
                        <div class="hamburger-line"></div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container text-center">
                &copy; 2025 - WebRazon2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    
    <!-- Modal para Nueva Tarea-->
    <div class="modal fade" id="nuevaTareaModal" tabindex="-1" aria-labelledby="nuevaTareaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content modal-violet">
                <div class="modal-header">
                    <h5 class="modal-title" id="nuevaTareaModalLabel">
                        <i class="fas fa-plus-circle me-2"></i>
                        Nueva Tarea
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        
                        <div class="mb-3">
                            <label for="nombreTarea" class="form-label">Nombre de la tarea</label>
                            <input type="text" class="form-control form-control-violet" id="nombreTarea" name="nombreTarea" placeholder="Ingrese el nombre de la tarea" required>
                        </div>
                        
                        
                        <div class="mb-3">
                            <label for="fechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                            <input type="date" class="form-control form-control-violet" id="fechaVencimiento" name="fechaVencimiento" required>
                        </div>
                        
                       
                        <div class="mb-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-select form-control-violet" id="estado" name="estado" required>
                                <option selected value="Pendiente">Pendiente</option>
                                <option value="En curso">En curso</option>
                                <option value="Finalizado">Finalizado</option>
                                <option value="Cancelada">Cancelada</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-ver" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-editar">Guardar Tarea</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Scripts para el sidebar -->
    <script>
        // Variable para saber si el sidebar está abierto o cerrado
        var sidebarOpen = false;
        
        function toggleNav() {
            if (sidebarOpen) {
                closeNav();
            } else {
                openNav();
            }
        }
        
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main-content").classList.add("sidebar-open");
            sidebarOpen = true;
        }
        
        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main-content").classList.remove("sidebar-open");
            sidebarOpen = false;
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>