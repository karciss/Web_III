@page
@model CanceladasModel
@{
    ViewData["Title"] = "Tareas Canceladas";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2 style="color: #644980;">Tareas Canceladas</h2>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevaTareaModal">
                <i class="fas fa-plus"></i> Nueva Tarea
            </button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Fecha Vencimiento</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Tareas != null && Model.Tareas.Any())
                        {
                            @foreach (var tarea in Model.Tareas)
                            {
                                <tr>
                                    <td>@tarea.nombreTarea</td>
                                    <td>@tarea.fechaVencimiento</td>
                                    <td>
                                        <span class="badge bg-cancelada">@tarea.estado</span>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-ver mx-1" title="Ver"><i class="fas fa-eye"></i></button>
                                        <button class="btn btn-sm btn-editar mx-1" title="Editar"><i class="fas fa-edit"></i></button>
                                        <button class="btn btn-sm btn-eliminar mx-1" title="Eliminar"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div class="py-4">
                                        <i class="fas fa-ban mb-3" style="font-size: 2rem; color: #D0BBE4;"></i>
                                        <p style="color: #644980;">No hay tareas canceladas</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <!-- Selector de tamaño de página -->
                    <div class="items-per-page-selector">
                        <span class="me-2" style="color: #644980;">Mostrar</span>
                        <div class="btn-group" role="group">
                            @foreach (var tamano in Model.OpcionesTamanoPagina)
                            {
                                <a asp-page="./Canceladas" 
                                   asp-route-pagina="1" 
                                   asp-route-tamanoPagina="@tamano" 
                                   class="btn @(tamano == Model.TamanoPagina ? "btn-editar" : "btn-ver")">
                                   @tamano
                                </a>
                            }
                        </div>
                        <span class="ms-2" style="color: #644980;">tareas por página</span>
                    </div>
                    
                    <!-- paginación -->
                    @if (Model.TotalPaginas > 1)
                    {
                        <nav>
                            <ul class="pagination pagination-violet mb-0">
                                <!-- Botón Anterior -->
                                <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="./Canceladas" asp-route-pagina="@(Model.PaginaActual - 1)" asp-route-tamanoPagina="@Model.TamanoPagina" aria-label="Anterior">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                
                                <!-- Números de página -->
                                @for (int i = 1; i <= Model.TotalPaginas; i++)
                                {
                                    <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                                        <a class="page-link" asp-page="./Canceladas" asp-route-pagina="@i" asp-route-tamanoPagina="@Model.TamanoPagina">@i</a>
                                    </li>
                                }
                                
                                <!-- Botón Siguiente -->
                                <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                                    <a class="page-link" asp-page="./Canceladas" asp-route-pagina="@(Model.PaginaActual + 1)" asp-route-tamanoPagina="@Model.TamanoPagina" aria-label="Siguiente">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>