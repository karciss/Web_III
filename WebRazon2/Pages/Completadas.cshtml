@page
@model CompletadasModel
@{
    ViewData["Title"] = "Tareas Completadas";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2 style="color: #644980;">Tareas Completadas</h2>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva Tarea
            </button>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Fecha Vencimiento</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Tareas != null && Model.Tareas.Any())
                        {
                            @foreach (var tarea in Model.Tareas)
                            {
                                <tr>
                                    <td>@tarea.nombreTarea</td>
                                    <td>@tarea.fechaVencimiento</td>
                                    <td>
                                        <span class="badge bg-completada">@tarea.estado</span>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-ver mx-1" title="Ver"><i class="fas fa-eye"></i></button>
                                        <button class="btn btn-sm btn-editar mx-1" title="Editar"><i class="fas fa-edit"></i></button>
                                        <button class="btn btn-sm btn-eliminar mx-1" title="Eliminar"><i class="fas fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">
                                    <div class="py-4">
                                        <i class="fas fa-check-circle mb-3" style="font-size: 2rem; color: #D0BBE4;"></i>
                                        <p style="color: #644980;">No hay tareas completadas</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                <!-- paginación -->
                @if (Model.TotalPaginas > 1)
                {
                    <nav>
                        <ul class="pagination pagination-violet justify-content-center mt-4">
                            <!-- Botón Anterior -->
                            <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                                <a class="page-link" asp-page="./Completadas" asp-route-pagina="@(Model.PaginaActual - 1)" aria-label="Anterior">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            
                            <!-- Números de página -->
                            @for (int i = 1; i <= Model.TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                                    <a class="page-link" asp-page="./Completadas" asp-route-pagina="@i">@i</a>
                                </li>
                            }
                            
                            <!-- Botón Siguiente -->
                            <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                                <a class="page-link" asp-page="./Completadas" asp-route-pagina="@(Model.PaginaActual + 1)" aria-label="Siguiente">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>